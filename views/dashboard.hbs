<h1 class="dashboardcss">Dashboard</h1><br><br>
<h3 class="left-text">Welcome {{name}}</h3><br>
<p class="left-text">Here are your stories</p><br><br>

{{#if stories}}
    <table class="table-format">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}" class="no-decoration">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MM Do YYYY, h:mm:ss a'}}</td>
                    <td><span>{{status}}</span></td>
                    <td>
                        <a href="/stories/edit/{{_id}}"><button type="button" class="float-left">Edit</button></a>
                        
                        <form action="/stories/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="float-left">Delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories</p>
{{/if}}